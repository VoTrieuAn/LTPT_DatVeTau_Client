                                 <cursor>
                                    <Cursor fx:constant="DEFAULT" />
                                 </cursor>
                              </Separator>
                              <VBox alignment="CENTER">
                                 <children>
                                    <Label fx:id="hoTenNVLabel" alignment="CENTER" maxHeight="-Infinity" text="Họ tên" textFill="RED">
