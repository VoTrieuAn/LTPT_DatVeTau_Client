                                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                       <children>
                                          <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../../images/Invoice.png" />
                                             </image>
                                          </ImageView>
                                          <Label text="Hóa Đơn">
                                             <font>
                                                <Font name="System Bold" size="16.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </graphic>
                              </JFXButton>
                              <JFXButton fx:id="ketCaButton" onAction="#handleKetCaAction" prefWidth="120.0" styleClass="button-custom" stylesheets="@../../css/QuanLi_GUI.css" text="">
                                 <graphic>
                                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                                       <children>
                                          <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../../images/exit.png" />
                                             </image>
                                          </ImageView>
                                          <Label text="Kết Ca">
                                             <font>
                                                <Font name="System Bold" size="16.0" />
